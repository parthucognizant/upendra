<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rechargeapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".RegisterNumberActivity"
            android:label="@string/title_activity_register_number" >
        </activity>
        <activity
            android:name=".RechargeActivity"
            android:label="@string/title_activity_recharge" >
        </activity>
        <activity
            android:name=".MobileActivity"
            android:label="@string/title_activity_mobile" >
        </activity>
        <activity
            android:name=".DTHActivity"
            android:label="@string/title_activity_dth" >
        </activity>
        <activity
            android:name=".DataCardActivity"
            android:label="@string/title_activity_data_card" >
        </activity>
        <activity
            android:name=".RechargePaymentMainActivity"
            android:label="@string/title_activity_recharge_payment_main" >
        </activity>
        <activity
            android:name=".TransactionActivity"
            android:label="@string/title_activity_transaction" >
        </activity>
        <activity
            android:name=".SuccessActivity"
            android:label="@string/title_activity_success" >
        </activity>
    </application>

</manifest>
